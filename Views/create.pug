extends layout 

block content 
    form(id = 'form' method = 'post' action = '/create')
        p Type in your Username 
            input(type = 'text' name = 'username')
        p Type in your Password 
            input(type = 'text' name = 'password')
        p Type in your Email 
            input(type = 'text' name = 'email')
        p Type in your Age 
            input(type = 'text' name = 'age')
        p Question #1:
        p What state do you live in currently?   
            select(name='state')
                option(value='LA') LA 
                option(value='UT') UT 
                option(value='TX') TX
                option(value='PA') PA
        p Question #2: 
        p What is your favorite color? 
            select(name='color')
                option(value='green') green 
                option(value='blue') blue
                option(value='pink') pink
                option(value='brown') brown
        p Question #3:
        p What is your middle name? 
            select(name='middle')
                option(value='Jess') Jess 
                option(value='Lee') Lee
                option(value='Levi') Levi
                option(value='Melly') Melly
        p 
            input(type = 'submit' value = 'add profile')